package com.training.bankingTransaction.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;

import com.training.bankingTransaction.model.Bank;
import com.training.bankingTransaction.repository.IBankRepository;

public class BankServiceImpl implements IBankService {

	@Autowired
	IBankRepository bankRepo;

	@Override
	public Bank createBank(Bank bank) {

		return bankRepo.save(bank);
	}

	@Override
	public Optional<Bank> getBankDetails(int bankId) {
		// TODO Auto-generated method stub
		Optional<Bank> optional; 
		optional = bankRepo.findById(bankId);
		return optional;
	}

}
