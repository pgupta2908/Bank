package com.training.bankingTransaction.service;

import java.math.BigDecimal;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;

import com.training.bankingTransaction.model.Account;
import com.training.bankingTransaction.repository.IAccountRepository;

public class AccountImpl implements IAccountService {

	@Autowired
	IAccountRepository accountRepo;

	@Override
	public ResponseEntity<Account> createAccount(Account account) {

		Account account = new Account();
		accountRepo.save(account);

		return new ResponseEntity<>(HttpStatus.CREATED);
	}

